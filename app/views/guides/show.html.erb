<div class="padded-little"></div>
<div class="padded"></div>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="card-guide-show" style="box-shadow: 0 3px 64px rgba(0, 0, 0, 0.16), 0 3px 60px rgba(0, 0, 0, 0.23);">
                <div class="guide-car-left-part">
                    <% guide_picture = @guide.user.facebook_picture_url || @guide.user.photo %>
                    <div class="pic-guide-left-part guide-show-pic" style="background-image:url('<%= cl_image_path guide_picture, crop: :fill %>')">
                    </div>
                </div>
                <div class="guide-car-right-part" style="border-bottom: 1px solid rgba(0,0,0,0.08);background: white;color: black;">
                    <div class="up-part-flexed" style="display: flex;justify-content: space-between;">
                        <div class="title-guide-right-part">
                            <h3 style="margin:0px;font-weight: 800;font-size: 34px;"> <%= @guide.user.first_name.capitalize %> <%= @guide.user.last_name %> </h3>
                        </div>
                    </div>
                  <div class="flexed">
                    <div class="left-part-card-guide">
                    <div class="region-guide-right-part" style="align-items:center;display: flex;justify-content: left;">
                        <%= image_tag 'map.png', class:'picto-guide' %>
                            <p style="font-size: 14px;"> <span style="color:#099c03;font-size: 16px;">Type de guide :</span>
                              <%= @guide.guide_type %>
                              <% if @guide.guide_type_second != nil %>
                              / <%= @guide.guide_type_second %>
                              <% end %>
                              <% if @guide.guide_type_third != nil %>
                              / <%= @guide.guide_type_third %>
                              <% end %>
                              </p>
                    </div>
                    <div class="region-guide-right-part" style="align-items:center;display: flex;justify-content: left;">
                        <%= image_tag 'map.png', class:'picto-guide' %>
                            <p style="font-size: 14px;"> <span style="color:#099c03;font-size: 16px;">Régions :</span>
                                <%= @guide.regions %> principalement </p>
                    </div>
                    <div class="region-guide-right-part" style="align-items:center;display: flex;justify-content: left;">
                        <%= image_tag 'library.png', class:'picto-guide' %>
                            <p style="font-size: 14px;"> <span style="color:#099c03;font-size: 16px;">Langues :</span>
                                <%= image_tag "http://cdn2.iconfinder.com/data/icons/flags/flags/32/#{@guide.language}.png", class:'flag-marged' %>
                                    <% if @guide.language_second.nil? != true  %>
                                        <%= image_tag "http://cdn2.iconfinder.com/data/icons/flags/flags/32/#{@guide.language_second}.png", alt: "" %>
                                            <% end %>
                            </p>
                    </div>
                    </div>
                    <div class="right-part-card-guide">
                    <div class="region-guide-right-part" style="align-items:center;display: flex;justify-content: left;">
                        <%= image_tag 'degree.png', class:'picto-guide' %>
                            <p style="font-size: 14px;"> <span style="color:#099c03;font-size: 16px;">Expérience :</span>
                                <%= @guide.experience %> ans</p>
                    </div>
                    <div class="region-guide-right-part" style="align-items:center;display: flex;justify-content: left;">
                        <%= image_tag 'degree.png', class:'picto-guide' %>
                            <p style="font-size: 14px;"> <span style="color:#099c03;font-size: 16px;">License :</span>
                                <%= @guide.license %>
                            </p>
                    </div>
                    <div class="region-guide-right-part" style="align-items:center;display: flex;justify-content: left;">
                        <%= image_tag 'degree.png', class:'picto-guide' %>
                            <p style="font-size: 14px;"> <span style="color:#099c03;font-size: 16px;">Associés :</span> Incomming soon !</p>
                    </div>
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row" style="margin-bottom: 5%">
        <div class="col-md-6">
            <h3 style="color:#099c03;padding-left:2%; font-weight: 400;">Contacter ce guide !</h3>
            <div class="contact-form-guide-show">
            <%= form_for (@message), :url => url_for(:controller => 'guides', :action => 'check_in') do |f| %>
              <%= f.text_field :body %>
              <%= hidden_field_tag :guide_id, @guide.id %>
              <div class="submit-button-right">
              <%= f.submit 'Envoyer !', :class => 'btn-default slim' %>
              </div>
            <% end %>
            </div>
        </div>
        <div class="col-md-6">
          <div class="guide-video-square">
            <iframe width="555" height="290" src="https://www.youtube.com/embed/TPdZvFuR8Ew" frameborder="0" allowfullscreen></iframe>
          </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <h3 style="color:#099c03;padding:2%; font-weight: 400;">Ils ont voyagé avec guide et le recommandent !</h3>
        <div class="col-md-12 all-messages-guide-show">
            <% @reviews.each do |review| %>
                <% if review.checked == true %>
                    <div class="col-md-12">
                        <div class="message" style="border-bottom: 1px solid #80808054;">
                            <% avatar_url = review.user.facebook_picture_url || review.user.photo %>
                                <%= image_tag avatar_url, class: "avatar-small rounded"%>
                                    <div class="message-body">
                                        <p> <span class="green" style="font-weight: 500;"><%= review.user.first_name %> <%= review.user.last_name %>,</span>
                                            <%= review.created_at.strftime("%m/%d/%y") %> : </p>
                                        <p style="color:black;">
                                            "
                                            <%= review.content %> "
                                        </p>
                                    </div>
                        </div>
                    </div>
                    <% end %>
                        <% end %>
        </div>
        <%= simple_form_for [@guide, @review] do |f| %>
            <%= f.label "Donnez votre avis !", class:"sub-title-guide" %>
            <div class="all-messages-guide-show" style="padding: 2%;">
                <p style="color: grey;font-size: 16px;">Si vous avez voyagé avec ce guide, vous pouvez déposer un avis et nous le publierons dans les jours suivants !</p>
                <%= f.input :content, label: false, requiered: true %>
                <div class="submit-button-right">
                    <%= f.submit "Envoyer !", class: "btn-default slim-15" %>
                        <% end %>
                        </div>
                        </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <h3 style="color:#099c03;padding:2%; font-weight: 400;">Vous souhaitez contacter d'autres guides en <%= @guide.pays %></h3>
                                </div>
                                <div class="col-md-12">
                                    <% @guides.each do |guide| %>
                                    <% unless guide == @guide %>
                                        <div class="col-md-3 card-wrapper">
                                            <% avatar_url = guide.user.facebook_picture_url || guide.user.photo%>
                                                <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
           url('<%= cl_image_path avatar_url, height: 300, width: 400, crop: :fill %>')">
                                                    <div class="card-category">
                                                        <span></span>
                                                    </div>
                                                    <div class="card-description">

                                                    </div>
                                                    <%= link_to "", guide_path(guide), class:"card-link" %>
                                                </div>
                                                <p class="index-card-title">
                                                </p>

                                        </div>
                                        <% end %>
                                        <% end %>
                                </div>
                            </div>
    </div>
</div>
