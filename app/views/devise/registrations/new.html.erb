<div class="padded-little"></div>

<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 form-login">
<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.label "Email" %>
    <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "johndoe@gmail.com" %>
    <%= f.label "Nom" %>
    <%= f.input :last_name, required: true, autofocus: true, label: false, placeholder: "Doe" %>
    <%= f.label "Prénom" %>
    <%= f.input :first_name, required: true, autofocus: true, label: false, placeholder: "John" %>
    <%= f.label "Année de naissance" %>
    <%= f.input :year_of_birth, required: true, autofocus: true, label: false, placeholder: "1978" %>
    <%= f.label "Pourquoi vous inscrire sur Soguide ?" %>
    <%= f.input :inscription_reason, required: true, autofocus: true, label: false, placeholder: "Je cherche un guide" %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.label "Mot de passe" %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) , label: false, placeholder: "" %>
    <%= f.label "Confirmer votre mot de passe" %>
    <%= f.input :password_confirmation, required: true, label: false%>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>


</div>
</div>
</div>
