<div class="padded-little"></div>

<div class="container">
  <div class="row">
    <div class="col-md-12 text-center">
    <h3 style="color: #339966;">Choisissez votre destination et d√©couvrez nos guides !</h3>
    <div class="padded-little" style="border-top: 1px solid grey"></div>
    </div>
    <div class="col-md-6">
    <% @countries.each do | country | %>
    <div class="col-md-6 card-wrapper">
    <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path country.photo, height: 300, width: 400, crop: :fill %>')">
      <div class="card-category">Popular</div>
      <div class="card-description">
        <h2><%= country.name %></h2>
      </div>
    </div>
    <p class="test-css"><%= country.description %></p>
    </div>
    <% end %>
    </div>
    <div class="col-md-6">
    <div id="map" style="width: 100%; height: 600px;"></div>
    </div>
  </div>
</div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
  <% end %>
<% end %>
